<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cita_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".4"
        android:src="@drawable/citas_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding=".7dp">
            <TextView
                android:id="@+id/doctor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Hernandez"
                android:textColor="@color/colorBackgroundBlack"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp">
             <TextView
                android:id="@+id/especialidad_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ginecologa"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/fecha_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="25/04/2018"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/hora_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12 pm"
                android:paddingRight="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
             <TextView
                android:id="@+id/lugar_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Plaza del sol"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>