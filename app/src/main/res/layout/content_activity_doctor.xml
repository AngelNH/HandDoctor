<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iteso.handdoctor.ActivityDoctor"
    tools:showIn="@layout/app_bar_activity_doctor"
    android:orientation="vertical"
    android:padding="20dp">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iteso.handdoctor.ActivityAgenda">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:textSize="30sp"
                android:text="Agenda"
                />

            <CalendarView
                android:id="@+id/activity_agenda_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1">
            </CalendarView>

            <include layout="@layout/appointment"></include>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
