<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iteso.handdoctor.ActivityPatient"
    tools:showIn="@layout/app_bar_activity_patient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        >
        <ImageSwitcher
            android:id="@+id/advice"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="fill"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:onClick="goToMap"
        >
        <ImageView
            android:id="@+id/cita_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/citas_default"
            android:paddingLeft="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/Doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Hernandez"
                android:paddingLeft="32dp"
                android:textSize="30dp"
                />
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/Junio/2018"
                android:paddingLeft="30dp"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1 pm."
                android:paddingLeft="32dp"
                android:textSize="20dp"
                />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>
