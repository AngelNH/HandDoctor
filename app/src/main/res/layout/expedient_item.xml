<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".3"
        android:src="@drawable/user_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/activity_expedient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joceline Arreguin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
        <TextView
            android:id="@+id/expediente_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/activity_expedient_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3318974635"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/activity_expedient_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joceline567@gmail.com"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>